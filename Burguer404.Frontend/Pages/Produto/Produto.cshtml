@page
@model Burguer404.Frontend.Pages.Produto.ProdutoModel
@{
    ViewData["Title"] = "Cadastro de Produto";
}

@using Burguer404.Domain.Enums;

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>

    <!-- CSS e Scripts -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/produto.css" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/produto.js"></script>
    <script src="~/js/cadastrar.js"></script>
            
</head>

<body>
    <div class="container">
        <h2>Cadastro de Produto</h2>

        <form onsubmit="cadastrarProduto(event)" enctype="multipart/form-data">
            <div class="form-group">
                <label for="nome">Nome do Produto</label>
                <input type="text" id="nome" name="nome" required />
            </div>

            <div class="form-group">
                <label for="descricao">Descrição</label>
                <textarea id="descricao" name="descricao" rows="2" required></textarea>
            </div>

            <div class="form-group">
                <label for="preco">Preço (R$)</label>
                <input type="text" name="preco" id="preco" placeholder="0,00" required />
            </div>

            <div class="form-group">
                <label for="categoria">Categoria</label>
                <select id="CategoriaProdutoId" name="CategoriaProdutoId" required>
                    <option value="">Selecione...</option>
                    <option value=@Convert.ToInt32(EnumCategoriaPedido.Lanche)>🍔 Lanche</option>
                    <option value=@Convert.ToInt32(EnumCategoriaPedido.Acompanhamento)>🍟 Acompanhamento</option>
                    <option value=@Convert.ToInt32(EnumCategoriaPedido.Bebida)>🥤 Bebida</option>
                    <option value=@Convert.ToInt32(EnumCategoriaPedido.Sobremesa)>🍨 Sobremesa</option>
                </select>
            </div>

            <div class="form-group">
                <label for="imagem">Imagem do Produto</label>
                <div style="display: flex; align-items: center; gap: 10px;">
                    <label for="ImagemFormFile" class="btn-arquivo">Escolher imagem</label>
                    <span id="nome-arquivo">Nenhum arquivo escolhido</span>
                </div>
                <input type="file" id="ImagemFormFile" name="imagem" accept="image/*" />
            </div>

            <button type="submit">
                <i class="bi bi-plus-circle"></i> Cadastrar Produto
            </button>
        </form>

        <div class="tabela-container">
            <h2>Produtos Cadastrados</h2>
            <table id="tabelaProdutos" class="display">
                <thead>
                    <tr>
                        <th style="width: 20px;">Ações</th>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Preço</th>
                        <th>Categoria</th>
                    </tr>
                </thead>
                <tbody>                 
                </tbody>
            </table>
        </div>
    </div>

    <div id="modalImagem" class="modal" style="display: none;">
        <div class="modal-content">
            <span id="fecharModal" class="close">&times;</span>
            <img id="imagemProduto" src="" style="max-width: 100%; height: auto;" />
        </div>
    </div>
</body>
